<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- CardView 样式 -->
    <style name="cardviewStyle" parent="Widget.MaterialComponents.CardView" />

    <!-- 圆角图片样式 -->
    <style name="roundedCornerImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/cardview_default_radius</item>
    </style>

    <!-- 向上箭头样式 -->
    <style name="topArrowImageStyle">

        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerSizeTopRight">160%</item>

        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerSizeTopLeft">160%</item>
    </style>

    <!-- textInputEditText 样式 -->
    <style name="textInputEditTextStyle">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

        <ImageView
            android:layout_width="@dimen/icon_size_larger"
            android:layout_height="@dimen/icon_size_larger"
            android:contentDescription="@null"
            android:padding="@dimen/icon_padding_small"
            android:src="@drawable/vector_baseline_add_circle_outline_24" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/add_second_type"
            android:textAppearance="?attr/textAppearanceCaption" />

    </LinearLayout>

</layout>
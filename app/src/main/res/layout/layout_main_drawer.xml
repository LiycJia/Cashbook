<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="cn.wj.android.cashbook.ui.viewmodel.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_header_height"
            android:layout_gravity="start"
            android:background="@drawable/shape_main_nav_header_bg"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:paddingTop="@dimen/content_vertical_spacing"
                android:src="@drawable/img_rmb_shadow" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/content_vertical_spacing"
                tools:text="未登录" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="已使用200天" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/content_horizontal_spacing"
                android:background="?selectableItemBackground"
                android:bind_onClick="@{viewModel.onMyBooksClick}"
                android:drawablePadding="@dimen/drawable_vertical_spacing"
                android:gravity="start|center_vertical"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/zero"
                android:text="@string/my_books"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/color_on_secondary"
                app:drawableStartCompat="@drawable/vector_baseline_library_books_24" />

        </LinearLayout>

    </LinearLayout>

</layout>